<odoo>
    <record id="demo_website_course_form" model="ir.ui.view">
        <field name="name">website teachers: form</field>
        <field name="model">demo_website.teachers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="course_ids">
                            <tree string="Courses" editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>