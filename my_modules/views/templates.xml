    <template id="index">
        <t t-call="website.layout">
            <t t-set="title">Academy</t>
            <div class="oe_structure">
                <div class="container">
                    <t t-foreach="teachers" t-as="teacher">
                        <p>
                            <t t-esc="teacher.id"/>
                            <t t-esc="teacher.name"/>
                        </p>
                    </t>
                </div>
            </div>
        </t>
    </template>
    <template id="biography">
        <t t-call="website.layout">
            <t t-set="title">Academy</t>
            <div class="oe_structure"/>
            <!--<div class="oe_structure">
                <div class="container">
                    <p><t t-esc="person.id"/> <t t-esc="person.name"/></p>
                </div>
            </div>-->
            <div class="oe_structure"/>
            <div class="oe_structure">
                <div class="container">
                    <t t-foreach="teachers" t-as="teacher">
                        <p>
                            <a t-attf-href="/academy/{{ slug(teacher) }}">
                                <t t-esc="teacher.name"/>
                            </a>
                        </p>
                    </t>
                </div>
            </div>
            <div class="oe_structure"/>
            <div class="oe_structure">
                <div class="container">
                    <h2>Hello I am
                        <t t-esc="teachers.name"/>
                        ..!
                    </h2>
                </div>
            </div>
            <div class="oe_structure"/>
            <div class="oe_structure">
                <div class="container">
                    <h3 t-field="teachers.name"/>
                    <p>Last modified Simple: <i t-field="teachers.write_date"/></p>
                    <p>Last modified Long: <i t-field="teachers.write_date" t-options='{"format": "long"}'/></p>
                    <p>Last modified Relative: <i t-field="teachers.write_date" t-options='{"widget": "relative"}'/></p>
                    <div t-field="teachers.biography"/>
                </div>
            </div>
        </t>
    </template>
