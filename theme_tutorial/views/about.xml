<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="about_page" model="website.page">
        <field name="name">About page</field>
        <field name="website_published">True</field>
        <field name="url">/about</field>
        <field name="type">qweb</field>
        <field name="key">theme_tutorial.about_page</field>
        <field name="arch" type="xml">
            <t name="About us" t-name="website.aboutus">
                <t t-call="website.layout">
                    <div id="wrap" class="">
                        <div class="oe_structure">
                            <section class="pt8 pb8">
                                <div class="container">
                                    <div class="row s_nb_column_fixed">
                                        <div class="col-lg-12 s_title pt16 pb16">
                                            <h1 class="text-center">About us</h1>
                                            <h3 class="text-muted text-center">Great products for great people</h3>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <section class="s_features_grid pt48 pb24" data-name="Features Grid">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-6 s_col_no_bgcolor pb24">
                                            <div class="row">
                                                <div class="col-lg-12 pt16 pb16" data-name="Box">
                                                    <i class="fa fa-2x fa-font-awesome rounded-circle bg-primary s_features_grid_icon"/>
                                                    <div class="s_features_grid_content">
                                                        <h4 class="o_default_snippet_text">Change Icons 456</h4>
                                                        <p class="o_default_snippet_text">Double click an icon to
                                                            replace it with one of your choice 456.
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 pt16 pb16" data-name="Box">
                                                    <i class="fa fa-2x fa-files-o rounded-circle bg-primary s_features_grid_icon"/>
                                                    <div class="s_features_grid_content">
                                                        <h4 class="o_default_snippet_text">Duplicate</h4>
                                                        <p class="o_default_snippet_text">Duplicate blocks and columns
                                                            to add more features.
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 pt16 pb16" data-name="Box">
                                                    <i class="fa fa-2x fa-trash rounded-circle bg-primary s_features_grid_icon"/>
                                                    <div class="s_features_grid_content">
                                                        <h4 class="o_default_snippet_text">Delete Blocks</h4>
                                                        <p class="o_default_snippet_text">Select and delete blocks to
                                                            remove some features.
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 s_col_no_bgcolor pb24">
                                            <div class="row">
                                                <div class="col-lg-12 pt16 pb16" data-name="Box">
                                                    <i class="fa fa-2x fa-magic rounded bg-secondary s_features_grid_icon"/>
                                                    <div class="s_features_grid_content">
                                                        <h4 class="o_default_snippet_text">Great Value</h4>
                                                        <p class="o_default_snippet_text">Turn every feature into a
                                                            benefit for your reader.
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 pt16 pb16" data-name="Box">
                                                    <i class="fa fa-2x fa-eyedropper rounded bg-secondary s_features_grid_icon"/>
                                                    <div class="s_features_grid_content">
                                                        <h4 class="o_default_snippet_text">Edit Styles</h4>
                                                        <p class="o_default_snippet_text">You can edit colors and
                                                            background to highlight features.
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 pt16 pb16" data-name="Box">
                                                    <i class="fa fa-2x fa-picture-o rounded bg-secondary s_features_grid_icon"/>
                                                    <div class="s_features_grid_content">
                                                        <h4 class="o_default_snippet_text">Sample Icons</h4>
                                                        <p class="o_default_snippet_text">All these icons are completely
                                                            free for commercial use.
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <div id="myCarousel1603376195471" class="s_carousel s_carousel_default carousel slide"
                                 data-interval="10000" data-name="Carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#myCarousel1603376195471" data-slide-to="0" class="active"/>
                                    <li data-target="#myCarousel1603376195471" data-slide-to="1"/>
                                    <li data-target="#myCarousel1603376195471" data-slide-to="2"/>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item oe_custom_bg oe_img_bg pt152 pb152 active"
                                         style="background-image: url('/web/image/website.s_carousel_default_image_1');"
                                         data-name="Slide">
                                        <div class="container">
                                            <div class="row content">
                                                <div class="carousel-content col-lg-7">
                                                    <div class="s_title pb8" data-name="Title">
                                                        <h2 class="s_title_default">
                                                            <font style="font-size: 62px;"
                                                                  class="o_default_snippet_text">Slide Title
                                                            </font>
                                                        </h2>
                                                    </div>
                                                    <p class="lead o_default_snippet_text">Use this snippet to presents
                                                        your content in a slideshow-like format.
                                                        <br/>
                                                        Don't write about products or services here, write about
                                                        solutions.
                                                    </p>
                                                    <div class="s_btn text-left pt16 pb16" data-name="Buttons">
                                                        <a href="/aboutus"
                                                           class="btn btn-secondary flat o_default_snippet_text">About
                                                            us
                                                        </a>
                                                        <a href="/contactus"
                                                           class="btn btn-primary flat o_default_snippet_text">Contact
                                                            us
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="carousel-item oe_custom_bg oe_img_bg pt96 pb96"
                                         style="background-image: url('/web/image/website.s_carousel_default_image_2');"
                                         data-name="Slide">
                                        <div class="container">
                                            <div class="row content">
                                                <div class="carousel-content col-lg-8 offset-lg-2 bg-black-50 text-center pt48 pb40">
                                                    <h2 style="font-size: 62px;" class="o_default_snippet_text">Clever
                                                        Slogan
                                                    </h2>
                                                    <div class="s_hr pt8 pb32">
                                                        <hr class="s_hr_5px s_hr_dotted border-600 w-25 border-epsilon mx-auto text-center"/>
                                                    </div>
                                                    <p class="lead o_default_snippet_text">Storytelling is powerful.
                                                        <br/>
                                                        It draws readers in and engages them.
                                                    </p>
                                                    <div class="s_btn text-center pt16 pb16" data-name="Buttons">
                                                        <a href="/"
                                                           class="btn btn-epsilon rounded-circle o_default_snippet_text">
                                                            Start your journey
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="carousel-item oe_custom_bg oe_img_bg pt128 pb128"
                                         style="background-image: url('/web/image/website.s_carousel_default_image_3');"
                                         data-name="Slide">
                                        <div class="container">
                                            <div class="row content">
                                                <div class="carousel-content col-lg-6 offset-lg-6">
                                                    <h2>
                                                        <font style="font-size: 62px; background-color: rgb(255, 255, 255);"
                                                              class="o_default_snippet_text">Edit this title
                                                        </font>
                                                    </h2>
                                                    <h4>
                                                        <font style="background-color: rgb(255, 255, 255);"
                                                              class="o_default_snippet_text">Good writing is simple, but
                                                            not simplistic.
                                                        </font>
                                                    </h4>
                                                    <p class="mt24 o_default_snippet_text">Good copy starts with
                                                        understanding how your product or service helps your customers.
                                                        Simple words communicate better than big words and pompous
                                                        language.
                                                    </p>
                                                    <div class="s_share text-left pt16 pb16">
                                                        <a href="https://www.facebook.com/sharer/sharer.php?u={url}"
                                                           target="_blank" class="s_share_facebook ">
                                                            <i class="fa fa-1x fa-facebook rounded shadow-sm"/>
                                                        </a>
                                                        <a href="https://twitter.com/intent/tweet?text={title}&amp;url={url}"
                                                           target="_blank" class="s_share_twitter ">
                                                            <i class="fa fa-1x fa-twitter rounded shadow-sm"/>
                                                        </a>
                                                        <a href="http://www.linkedin.com/shareArticle?mini=true&amp;url={url}&amp;title={title}&amp;"
                                                           target="_blank" class="s_share_linkedin ">
                                                            <i class="fa fa-1x fa-linkedin rounded shadow-sm"/>
                                                        </a>
                                                        <a href="mailto:?body={url}&amp;subject={title}"
                                                           class="s_share_email ">
                                                            <i class="fa fa-1x fa-envelope rounded shadow-sm"/>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="carousel-control-prev" data-target="#myCarousel1603376195471"
                                     data-slide="prev" role="img" aria-label="Previous" title="Previous">
                                    <span class="carousel-control-prev-icon"/>
                                    <span class="sr-only o_default_snippet_text">Previous</span>
                                </div>
                                <div class="carousel-control-next" data-target="#myCarousel1603376195471"
                                     data-slide="next" role="img" aria-label="Next" title="Next">
                                    <span class="carousel-control-next-icon"/>
                                    <span class="sr-only o_default_snippet_text">Next</span>
                                </div>
                            </div>
                            <section class="s_three_columns bg-200 pt32 pb32" data-name="Columns">
                                <div class="container">
                                    <div class="row d-flex align-items-stretch">
                                        <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                            <div class="card bg-white">
                                                <img class="card-img-top" src="/web/image/website.library_image_11"
                                                     alt="Odoo - Sample 1 for three columns"/>
                                                <div class="card-body">
                                                    <h3 class="card-title o_default_snippet_text">Feature One</h3>
                                                    <p class="card-text o_default_snippet_text">Adapt these three
                                                        columns to fit your design need. To duplicate, delete or move
                                                        columns, select the column and use the top icons to perform your
                                                        action.
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                            <div class="card bg-white">
                                                <img class="card-img-top" src="/web/image/website.library_image_13"
                                                     alt="Odoo - Sample 2 for three columns"/>
                                                <div class="card-body">
                                                    <h3 class="card-title o_default_snippet_text">Feature Two</h3>
                                                    <p class="card-text o_default_snippet_text">To add a fourth column,
                                                        reduce the size of these three columns using the right icon of
                                                        each block. Then, duplicate one of the columns to create a new
                                                        one as a copy.
                                                    </p>
                                                </div>
                                                <div class="card-footer">
                                                    <i class="fa fa-info-circle mr-1"/>
                                                    <small class="o_default_snippet_text">Additional information</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                                            <div class="card bg-white">
                                                <img class="card-img-top" src="/web/image/website.library_image_07"
                                                     alt="Odoo - Sample 3 for three columns"/>
                                                <div class="card-body">
                                                    <h3 class="card-title o_default_snippet_text">Feature Three</h3>
                                                    <p class="card-text o_default_snippet_text">Delete the above image
                                                        or replace it with a picture that illustrates your message.
                                                        Click on the picture to change its <em
                                                                class="o_default_snippet_text">rounded corner
                                                        </em> style.
                                                    </p>
                                                    <div class="s_btn text-left pb0 pt16" data-name="Button">
                                                        <a href="#"
                                                           class="btn btn-primary btn-sm o_default_snippet_text">Learn
                                                            more
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>

    <record id="about_page_link" model="website.menu">
        <field name="name">AboutUs</field>
        <field name="page_id" ref="about_page"/>
        <field name="url">/about</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">99</field>
    </record>
</odoo>